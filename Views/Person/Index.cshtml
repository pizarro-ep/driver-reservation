@model IEnumerable<Transport.Models.PersonDTO>

@{
    ViewData["Title"] = "Personas";
}

<h1>Lista de personas</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Nueva Persona</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surnames)
            </th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surnames)
                </td>
                <td class="d-flex justify-content-around">
                    <a asp-action="Edit" asp-route-id="@item.Dni" class="btn btn-sm btn-warning fs-5"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Dni" class="btn btn-sm btn-info fs-5"><i class="bi bi-list-columns-reverse"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Dni" class="btn btn-sm btn-outline-danger fs-5"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
