@model CreateRoleDTO

@{
    ViewData["Title"] = "Crear | Role";
}

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row mt-3">
        <label asp-for="RoleName" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="Description" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-8">
            <button type="submit" class="btn btn-info"> Crear rol </button>
        </div>
    </div>
</form>